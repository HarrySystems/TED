{
	"name": "TED",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "The transpilation tool to rule them all",
	"background": {
		"scripts": [
			"background.js"			
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"run_at": "document_end",
			"matches": ["*://*/*"],
			"all_frames": true,

			"js": [
				"core/handler.js",
				"core/babel.min.js",
				"core/coffee-script.js",
				
				"core/jade.js",
				"core/less.min.js",
				"core/marked.js",
				"core/sass.js",
				"core/sass.worker.js",
				"core/stylus.min.js",
				"core/typescript.js",
				"core/ejs.min.js",
				"core/mustache.js",

				"core/e.js",

				"core/TED.js"
			]
		}
	],

	"permissions": [
		"https://*/*",
		"http://*/*",
		"tabs"
	],
	"web_accessible_resources": ["core/jade.js"],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}